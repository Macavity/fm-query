{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "preserveConstEnums": true,
    "declaration": true,
    "outDir": "dist/",
    "suppressImplicitAnyIndexErrors": true
  },
  "filesGlob": [
    "./source/**/*.ts",
    "!./node_modules/**/*.ts"
  ],
  "files": [
    "./source/index.ts",
    "./source/ServerConnection.ts",
    "./source/functions.ts",
    "./test/ServerConnectionTest.ts"
  ]
}
